<!DOCTYPE html>
<html>
  <head>
    <title>Streamline</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
      @import url('https://fonts.googleapis.com/css?family=Arvo|Oxygen+Mono');
    </style>
  </head>

  <body>
    <div id="flex-content-container">
      <nav class="navbar">
        <div class="row">
          <div class="col-sm-1">
            <%= image_tag "logo1.jpg",  class: 'logo'%>
          </div>
          <div class="col-sm-9">
            <%= link_to 'Streamline Accounting', root_path, class: "navbar-brand" %>
          </div>
        </div>
      </nav>
      <% if notice.present? %>
        <p class="alert alert-info"><%= notice %></p>
      <%end%>
      <% if alert.present? %>
        <p class="alert alert-danger"><%= alert %></p>
      <%end%>
      <%= yield %>
      <div id="footer">
        <div class="container">
          <div class="row">
          <div class="col-md text-center">
            <u>CONTACT</u>
            <li>Make an appointment and visit soon!</li>
            <li><a>971.235.8721</a></li>
            <li>email?</li>
          </div>
          <br/>
          <div class="col-md text-center">
            <u>HOURS</u>
            <li>Monday - Friday: 10am - 4pm</li>
            <li>By Appointment</li>
            <li>Saturday & Sunday: Closed</li>
          </div>
          <div class="col-md text-center">
            <u>PLACEHOLDER</u>
            <li>Example</li>
            <li>Example</li>
          </div>
        </div>
        </div>
      </div>
    
  </body>
</html>
